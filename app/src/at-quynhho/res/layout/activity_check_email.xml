<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asiantech.CheckEmailActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asiantech.summer.com.asiantech.CheckEmailActivity">
    <TextView
        android:background="@drawable/ic_background_editbottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgKey"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/ic_keylock"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAddr"
        android:text="Please Enter Your Email Address"
        android:textColor="@color/colorBlue"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/imgKey"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/bgEmail"
        android:paddingTop="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_background_email"
        app:layout_constraintTop_toTopOf="@id/tvAddr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <EditText
            android:id="@+id/edEmail"
            android:backgroundTint="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:hint="@string/prompt_email"
            android:text="info.person@gmail.com"
            android:textColor="@color/colorGrey"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/bgEmail" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvSend"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Send"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@drawable/ic_background_send"
        app:layout_constraintTop_toTopOf="@id/bgEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
