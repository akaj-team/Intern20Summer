<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asiantech.summer.layoutfragment.EditProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editProfileFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/editProfile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorLightBlue"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvEditProfile"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="@string/edit_profile"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivNo"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/ic_remove"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivYes"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_yes"
                app:layout_constraintRight_toRightOf="@id/tvEditProfile"
                app:layout_constraintTop_toTopOf="@id/editProfile" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="@id/editProfile">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cvImg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:civ_border_color="@color/colorBlack"
                app:civ_border_width="2dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="136dp"
                tools:layout_editor_absoluteY="48dp" />

            <ImageView
                android:id="@+id/ivCamera"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_camera"
                app:layout_constraintBottom_toBottomOf="@id/cvImg"
                app:layout_constraintRight_toRightOf="@id/cvImg" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bgProfile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/cvImg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_background_sceen"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_background_profile"
                    android:hint="@string/username"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:inputType="text"
                    android:importantForAutofill="no" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/ic_background_sceen"
                    app:layout_constraintTop_toTopOf="@id/etUserName" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/ic_background_profile"
                    android:hint="@string/phone_no"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/etUserName"
                    android:inputType="text"
                    tools:ignore="TextFields"
                    android:autofillHints="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/ic_background_sceen"
                    app:layout_constraintTop_toTopOf="@id/etPhone" />

                <EditText
                    android:id="@+id/etGender"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/ic_background_profile"
                    android:hint="@string/gender"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/etPhone"
                    android:autofillHints=""
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/ic_background_sceen"
                    app:layout_constraintTop_toTopOf="@id/etGender" />

                <EditText
                    android:id="@+id/etBith"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/ic_background_profile"
                    android:hint="@string/date_of_bith"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/etGender"
                    android:autofillHints=""
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/ic_background_sceen"
                    app:layout_constraintTop_toTopOf="@id/etBith" />

                <EditText
                    android:id="@+id/etLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/ic_background_profile"
                    android:hint="@string/language"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/etBith"
                    android:autofillHints=""
                    android:inputType="text" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout><!--</ScrollView>-->
</ScrollView>