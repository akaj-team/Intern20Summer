<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBGPink">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineCenter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civDiskAlbum"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/taylor_swift"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMusicNamePlaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blank_space"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/sbMusicTime"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/civDiskAlbum" />

    <TextView
        android:id="@+id/tvMusicArtistPlaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/taylor_swift_album"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/tvMusicNamePlaying"
        app:layout_constraintRight_toRightOf="@id/tvMusicNamePlaying"
        app:layout_constraintTop_toBottomOf="@id/tvMusicNamePlaying" />

    <TextView
        android:id="@+id/tvTimeStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/sbMusicTime"
        app:layout_constraintRight_toLeftOf="@id/sbMusicTime"
        app:layout_constraintTop_toTopOf="@id/sbMusicTime" />

    <TextView
        android:id="@+id/tvTimeEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/sbMusicTime"
        app:layout_constraintLeft_toRightOf="@id/sbMusicTime"
        app:layout_constraintTop_toTopOf="@id/sbMusicTime" />


    <SeekBar
        android:id="@+id/sbMusicTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/imgPlayButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imgPlayButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_pause_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imgPrevious"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_skip_to_start_30"
        app:layout_constraintBottom_toBottomOf="@id/imgPlayButton"
        app:layout_constraintRight_toLeftOf="@id/imgPlayButton"
        app:layout_constraintTop_toTopOf="@id/imgPlayButton" />

    <ImageView
        android:id="@+id/imgNext"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_skip_next_30"
        app:layout_constraintBottom_toBottomOf="@id/imgPlayButton"
        app:layout_constraintLeft_toRightOf="@id/imgPlayButton"
        app:layout_constraintTop_toTopOf="@id/imgPlayButton" />

    <ImageView
        android:id="@+id/imgRepeat"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/ic_repeat"
        app:layout_constraintBottom_toBottomOf="@id/imgNext"
        app:layout_constraintLeft_toLeftOf="@id/imgNext"
        app:layout_constraintTop_toTopOf="@id/imgNext" />

    <ImageView
        android:id="@+id/imgShare"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="80dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@id/imgPrevious"
        app:layout_constraintRight_toRightOf="@id/imgPrevious"
        app:layout_constraintTop_toTopOf="@id/imgPrevious" />


</androidx.constraintlayout.widget.ConstraintLayout>
