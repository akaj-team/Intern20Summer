<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewChat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clUserChat"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/circleImageViewChat"
        app:layout_constraintLeft_toLeftOf="@id/circleImageViewChat">

        <TextView
            android:id="@+id/tvUserNameChat"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="acd"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@id/clUserChat"
            app:layout_constraintTop_toTopOf="@id/clUserChat" />
        <TextView
            android:id="@+id/tvIntroductionChat"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="acd"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@id/tvUserNameChat"
            app:layout_constraintTop_toTopOf="@id/tvUserNameChat" />

        <ImageView
            android:id="@+id/imgStar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_star"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/tvUserNameChat"
            app:layout_constraintStart_toStartOf="@id/clUserChat"
            app:layout_constraintTop_toTopOf="@id/clUserChat" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>