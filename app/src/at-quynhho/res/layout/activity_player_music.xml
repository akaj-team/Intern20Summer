<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.asiantech.summer.PlayerMusicActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/icon_arrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/background_search"
            android:tooltipText="@string/search"
            app:layout_constraintLeft_toLeftOf="@id/imgArrow"
            app:layout_constraintRight_toRightOf="@id/imgDelete"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/clToolbar">

        <TextView
            android:id="@+id/tvNeigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/blue_neighbourhood"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/album_by_troye_sivan"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/tvNeigh" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvAlbum" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/background_player"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/imgMusic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNameMusic"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:paddingTop="5dp"
                android:text="@string/blue_neighbourhood"
                android:textSize="17sp"
                app:layout_constraintLeft_toRightOf="@id/imgMusic"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingTop="5dp"
                android:text="@string/blue_neighbourhood"
                android:textSize="10sp"
                app:layout_constraintLeft_toRightOf="@id/imgMusic"
                app:layout_constraintTop_toBottomOf="@id/tvNameMusic" />
            <ImageView
                android:id="@+id/imgPlay"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_play"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvName" />

            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_next"
                app:layout_constraintLeft_toLeftOf="@id/imgPlay"
                app:layout_constraintTop_toTopOf="@id/imgPlay" />

            <ImageView
                android:id="@+id/imgBefore"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="80dp"
                android:src="@drawable/ic_back"
                app:layout_constraintRight_toRightOf="@id/imgPlay"
                app:layout_constraintTop_toTopOf="@id/imgPlay" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:indeterminateTint="@color/colorPink"
                app:layout_constraintTop_toBottomOf="@id/imgPlay" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
