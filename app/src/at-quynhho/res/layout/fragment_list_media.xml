<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPink"
    tools:context="com.asiantech.summer.fragment.ListMediaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/icon_arrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/background_search"
            android:tooltipText="@string/search"
            app:layout_constraintLeft_toLeftOf="@id/imgArrow"
            app:layout_constraintRight_toRightOf="@id/imgDelete"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/clToolbar">

        <TextView
            android:id="@+id/tvNeigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="@string/blue_neighbourhood"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/album_by_troye_sivan"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/tvNeigh" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListMusic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@id/tvAlbum" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCardView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/background_player"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/imgMusicArt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNameMusic"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:paddingTop="5dp"
                android:text="@string/blue_neighbourhood"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                app:layout_constraintLeft_toRightOf="@id/imgMusicArt"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNameSinger"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingTop="5dp"
                android:text="@string/blue_neighbourhood"
                android:textSize="10sp"
                app:layout_constraintLeft_toRightOf="@id/imgMusicArt"
                app:layout_constraintTop_toBottomOf="@id/tvNameMusic"
                tools:ignore="SmallSp" />

            <ImageView
                android:id="@+id/imgPlayPause"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_play_arrow_black_30"
                app:layout_constraintLeft_toRightOf="@id/tvNameSinger"
                app:layout_constraintTop_toBottomOf="@id/tvNameMusic" />

            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_skip_next_30"
                app:layout_constraintLeft_toLeftOf="@id/imgPlayPause"
                app:layout_constraintTop_toTopOf="@id/imgPlayPause" />

            <ImageView
                android:id="@+id/imgPrevious"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="80dp"
                android:src="@drawable/ic_skip_to_start_30"
                app:layout_constraintRight_toRightOf="@id/imgPlayPause"
                app:layout_constraintTop_toTopOf="@id/imgPlayPause" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
