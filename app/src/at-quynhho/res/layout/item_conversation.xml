<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBackgroundImg"
        android:layout_width="80dp"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civAvatarUserMess"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMessageUnread"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:background="@drawable/bg_number_message_unread"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            app:layout_constraintRight_toRightOf="@id/civAvatarUserMess"
            app:layout_constraintTop_toTopOf="@id/civAvatarUserMess" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clUserChat"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        app:layout_constraintLeft_toLeftOf="@id/clBackgroundImg"
        app:layout_constraintStart_toStartOf="@id/clBackgroundImg"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvUserNameChat"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@id/clUserChat"
            app:layout_constraintTop_toTopOf="@id/clUserChat" />

        <TextView
            android:id="@+id/tvInformationChat"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorGrey"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@id/tvUserNameChat"
            app:layout_constraintTop_toTopOf="@id/tvUserNameChat" />

        <ImageView
            android:id="@+id/imgStarOn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/selector_star"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/tvUserNameChat"
            app:layout_constraintStart_toStartOf="@id/clUserChat"
            app:layout_constraintTop_toTopOf="@id/clUserChat" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

